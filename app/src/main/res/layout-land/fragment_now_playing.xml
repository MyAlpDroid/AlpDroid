<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fragmentblock"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:outlineSpotShadowColor="#03A9F4">
    <RelativeLayout
        android:id="@+id/now_playing_detail"
        android:layout_marginTop="48dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/now_playing_art_card"
            android:layout_width="280dp"
            android:layout_height="280dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/now_playing_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher"
                android:visibility="visible" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/now_playing_title"
            style="@android:style/TextAppearance.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/now_playing_art_card"
            android:layout_marginTop="16dp"
            android:text="Track"
            android:textAlignment="center"
            android:textColor="#FFE500" />

        <TextView
            android:id="@+id/now_playing_artist"
            style="@android:style/TextAppearance.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/now_playing_title"
            android:text="Artist — Album"
            android:textAlignment="center"
            android:textColor="#FFEB3B" />

        <RelativeLayout
            android:id="@+id/now_playing_button"
            android:layout_width="439dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/now_playing_art_card"
            android:layout_alignParentTop="true"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="32dp">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="70dp"
                android:layout_toEndOf="@+id/imageButton3"
                android:visibility="visible"
                app:srcCompat="@android:drawable/ic_media_ff" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="70dp"
                android:layout_toEndOf="@+id/imageButton5"
                android:visibility="visible"
                app:srcCompat="@android:drawable/ic_media_rew" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="70dp"
                android:layout_toEndOf="@+id/imageButton4"
                android:visibility="visible"
                app:srcCompat="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="70dp"
                android:layout_toEndOf="@+id/imageButton2"
                android:visibility="visible"
                app:srcCompat="@android:drawable/ic_media_pause" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="70dp"
                android:visibility="visible"
                app:srcCompat="@android:drawable/ic_media_previous" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="12dp"
                android:layout_marginTop="70dp"
                android:layout_toEndOf="@+id/imageButton"
                android:visibility="visible"
                app:srcCompat="@android:drawable/ic_media_next" />
        </RelativeLayout>

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="338dp"
            android:text="RadioButton" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="-1dp"
            android:text="RadioButton" />

    </RelativeLayout>

    <TextView
        android:id="@+id/now_playing_nothing_playing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/nothing_playing"
        android:textAlignment="center"
        android:gravity="center"
        android:visibility="gone"
        style="@android:style/TextAppearance.Large"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
