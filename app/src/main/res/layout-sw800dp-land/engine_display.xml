                app:sv_markColor="#FFFFFF"
                app:sv_markHeight="16dp"
                app:sv_markStyle="ROUND"
                app:sv_markWidth="2dp"
                app:sv_marksNumber="21"
                app:sv_marksPadding="42dp"
